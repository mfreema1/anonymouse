{
    "message": {
        "type": "string",
        "maxLength": 150
    },
    "roomID": {
        "type": "string",
        "maxLength": 4,
        "minLength": 4
    },
    "messageID": {
        "type": "string",
        "maxLength": 36,
        "minLength": 36
    },
    "username": {
        "type": "string",
        "maxLength": 12,
        "minLength": 4
    },
    "password": {
        "type": "string",
        "maxLength": 12,
        "minLength": 4
    },
    "datetime": {
        "type": "string",
        "format": "date-time"
    },
    "approved": {
        "type": "boolean"
    },
    "question": {
        "roomID": { "$ref": "#/roomID" },
        "username": { "$ref": "#/username" },
        "message": { "$ref": "#/message" },
        "datetime": { "$ref": "#/datetime" }
    },
    "response": {
        "roomID": { "$ref": "#/roomID" },
        "username": { "$ref": "#/username" },
        "message": { "$ref": "#/message" },
        "datetime": { "$ref": "#/datetime" }
    },
    "rejection": {
        "message": { "$ref": "#/message" },
        "datetime": { "$ref": "#/datetime" }
    },
    "acceptance": {
        "message": { "$ref": "#/message" }
    },
    "expiry": {
        "message": { "$ref": "#/message" },
        "datetime": { "$ref": "#/datetime" }
    },
    "disconnect": {
        "roomID": { "$ref": "#/roomID" }
    },
    "login": {
        "username": { "$ref": "#/username" },
        "password": { "$ref": "#/password" }
    },
    "login response": {
        "approved": { "$ref": "#/approved" }
    }
}